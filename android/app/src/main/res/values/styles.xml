
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorEdgeEffect">@color/sefaria_blue</item>
        <item name="android:colorAccent">@color/sefaria_blue</item> <!-- for fun -->
        <item name="android:colorPrimary">@color/sefaria_blue</item> <!-- affects color of header in app switcher -->
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:colorControlActivated">@color/sefaria_blue</item> <!-- color of text selection handles -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>

</resources>
